<div id="sign_in">
  <%= image_tag "/assets/Yuu171226IMGL0015.jpg", id: "sign_in"%>
  <div class="top_title">
    <h2>Todo-APP</h2>
  </div>
  <div class="user_sign_in">
    <%= form_with model: @user, url: user_session_path, method: :post, local: true do |f| %>
      <div class="sign_up_path">
        <%= link_to "新規会員登録", new_user_registration_path, class: "sign_up_path_btn" %>
      </div>
      <div class="sign_in_input">
        <div class="sign_in_field">
          <%= f.email_field :email, autocomplete: "email", class: "field_input", placeholder: "メールアドレス" %>
        </div>
        <div class="sign_in_field">
          <%= f.password_field :password, autocomplete: "current-password", class: "field_input", placeholder: "パスワード" %>
        </div>
        <div class="sign_in_action">
          <%= f.submit "ログイン", class: "sign_in_btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>




